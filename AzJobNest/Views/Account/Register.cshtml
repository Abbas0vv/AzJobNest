@model BaseViewModel

<main style="min-height: 75vh;">
	<div class="container">

		<div class="row justify-content-center align-items-center" style="min-height: 75vh;">
			<!-- Left side: Form -->
			<div class="col-12 col-md-5 shadow p-4 bg-white rounded mx-3 my-3">

				<div class="animated-icons">
					<i class="fab fa-github"></i>
					<i class="fab fa-js"></i>
					<i class="fab fa-html5"></i>
					<i class="fab fa-css3-alt"></i>
					<i class="fab fa-react"></i>
					<i class="fab fa-node-js"></i>
					<i class="fab fa-python"></i>
				</div>

				<h2 class="mb-4 text-center">Register</h2>
				<form asp-action="Register" asp-controller="Account" method="post" id="registerForm" novalidate>
					<div asp-validation-summary="All" class="text-danger mb-3"></div>

					<div class="mb-3">
						<label asp-for="@Model.RegisterViewModel.UserName" class="form-label">Username</label>
						<input asp-for="@Model.RegisterViewModel.UserName" class="form-control" />
						<span asp-validation-for="@Model.RegisterViewModel.UserName" class="invalid-feedback d-block"></span>
					</div>

					<div class="mb-3">
						<label asp-for="@Model.RegisterViewModel.Email" class="form-label">Email</label>
						<input asp-for="@Model.RegisterViewModel.Email" class="form-control" />
						<span asp-validation-for="@Model.RegisterViewModel.Email" class="invalid-feedback d-block"></span>
					</div>

					<div class="mb-3">
						<label asp-for="@Model.RegisterViewModel.Password" class="form-label">Password</label>
						<input asp-for="@Model.RegisterViewModel.Password" class="form-control" />
						<span asp-validation-for="@Model.RegisterViewModel.Password" class="invalid-feedback d-block"></span>
					</div>

					<div class="mb-3">
						<label asp-for="@Model.RegisterViewModel.ConfirmPasswor" class="form-label">Confirm Password</label>
						<input asp-for="@Model.RegisterViewModel.ConfirmPasswor" class="form-control" />
						<span asp-validation-for="@Model.RegisterViewModel.ConfirmPasswor" class="invalid-feedback d-block"></span>
					</div>

					<div class="mb-3">
						<label asp-for="@Model.RegisterViewModel.SelectedRole" class="form-label">Select your role</label>
						<select asp-for="@Model.RegisterViewModel.SelectedRole" class="form-select">
							<option value="">-- Select --</option>
							<option value="Freelancer">Freelancer</option>
							<option value="Employer">Employer</option>
						</select>
						<span asp-validation-for="@Model.RegisterViewModel.SelectedRole" class="text-danger"></span>
					</div>

					<button type="submit" class="btn btn-primary w-100">Register</button>
				</form>
			</div>

			<!-- Right side: With animation -->
			<div class="col-12 col-md-6 mx-3 my-3">
				<div class="p-4 bg-light rounded h-100 d-flex flex-column justify-content-center align-items-center text-center">
					<h3>Welcome!</h3>
					<p>Fill out the registration form to get full access to the site.</p>

					<!-- Lottie animation -->
					<lottie-player src="https://assets3.lottiefiles.com/packages/lf20_5ngs2ksb.json"
								   background="transparent"
								   speed="1"
								   style="width: 300px; height: 200px;"
								   loop
								   autoplay>
					</lottie-player>
				</div>
			</div>

		</div>
	</div>
</main>
