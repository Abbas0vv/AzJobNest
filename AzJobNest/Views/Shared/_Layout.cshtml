@using AzJobNest.Helpers.Enums
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>AzJobNest - Freelance Marketplace</title>
	<style>
		/* Global Settings */
		#main-content {
			transition: opacity 1s ease;
			opacity: 0; /* Başlanğıcda gizli olması üçün */
			display: none; /* JavaScript-də açılır */
		}

		body {
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			background-color: #f8f9fa;
			color: #212529;
			scroll-behavior: smooth;
		}

		/* Navbar */
		.navbar {
			box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
			background-color: #ffffff !important;
			transition: all 0.3s ease-in-out;
			position: sticky;
			top: 0;
			z-index: 1000;
		}

		main {
			position: relative;
			background: linear-gradient(120deg, #89f7fe 0%, #66a6ff 100%);
			color: #333;
			min-height: 85vh !important;
			height: auto;
		}

		@@keyframes gradientBG {
			0% {
				background-position: 0% 50%;
			}

			50% {
				background-position: 100% 50%;
			}

			100% {
				background-position: 0% 50%;
			}
		}





		.navbar-brand {
			font-weight: bold;
			color: #0d6efd !important;
		}

		.navbar-nav .nav-link {
			font-weight: 500;
			transition: color 0.2s ease;
		}

			.navbar-nav .nav-link:hover {
				color: #0d6efd !important;
			}

		/* Header animation */
		.animate__animated {
			animation-duration: 1s;
		}

		/* Main Welcome Box */
		main .shadow {
			max-width: 600px;
			background-color: #fff;
			border-radius: 16px;
			padding: 40px 20px;
			box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
		}

		/* Buttons */
		.btn-primary {
			background-color: #0d6efd;
			border: none;
			transition: background-color 0.3s ease-in-out;
		}

			.btn-primary:hover {
				background-color: #0b5ed7;
			}

		.btn-outline-primary {
			border-color: #0d6efd;
			color: #0d6efd;
			transition: all 0.3s ease-in-out;
		}

			.btn-outline-primary:hover {
				background-color: #0d6efd;
				color: #fff;
			}

		#welcomePopup {
			position: fixed;
			top: 50%;
			background-color: #f0f8ff;
			left: 50%;
			transform: translate(-50%, -50%);
			z-index: 9999; /* digər elementlərin üstündə olsun */
			padding: 20px;
			border-radius: 10px;
			transition: opacity 0.7s ease-in-out;
		}

			#welcomePopup.hidden {
				opacity: 0;
			}

		/* Footer */
		footer {
			font-size: 14px;
		}

			footer h5, footer h6 {
				font-weight: bold;
			}

			footer a:hover {
				text-decoration: underline;
				color: #0d6efd;
			}

		/* Responsive tweaks */
		@@media (max-width: 767.98px) {
			.mx-3 {
				margin-left: 0 !important;
				margin-right: 0 !important;
			}

			.p-4 {
				padding: 1rem !important;
			}
		}

		@@media (max-width: 768px) {
			main .shadow {
				max-width: 340px;
			}

			main .shadow {
				margin: 0 1rem;
				padding: 30px 15px;
			}

			.freelancer-dashboard {
				width: 75%;
				margin: 0 auto;
			}

			.map-section {
				display: none !important
			}

			.col-12.col-md-6.mx-3.my-3 {
				display: none !important;
			}

			.navbar-nav {
				text-align: center;
			}
		}

		main .shadow {
			margin: 0 1rem;
			padding: 30px 15px;
		}

		.navbar-nav {
			text-align: center;
		}

		/* Floating Icons Background */
		.animated-icons {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			overflow: hidden;
			z-index: 0;
			pointer-events: none;
		}

			.animated-icons i {
				position: absolute;
				bottom: -100px; /* ekranın aşağısından başlasın */
				color: rgba(255, 255, 255, 0.552);
				font-size: 5rem !important;
				animation: floatIcon 10s linear infinite;
				z-index: 0;
				left: calc(100% * var(--i) / 10); /* fərqli mövqelər üçün */
			}

		@@keyframes floatIcon {
			0% {
				transform: translateY(0);
				opacity: 0;
			}

			20% {
				opacity: 1;
			}

			100% {
				transform: translateY(-120vh); /* tam yuxarı qalxsın */
				opacity: 0;
			}
		}



		/* Random placement (nth-child) */
		.animated-icons i:nth-child(1) {
			font-size: 2rem;
			animation-delay: 0s;
		}

		.animated-icons i:nth-child(2) {
			left: 15%;
			font-size: 2.5rem;
			animation-delay: 3s;
		}

		.animated-icons i:nth-child(3) {
			left: 30%;
			font-size: 3rem;
			animation-delay: 6s;
		}

		.animated-icons i:nth-child(4) {
			left: 45%;
			font-size: 2rem;
			animation-delay: 9s;
		}

		.animated-icons i:nth-child(5) {
			left: 60%;
			font-size: 2.5rem;
			animation-delay: 12s;
		}

		.animated-icons i:nth-child(6) {
			left: 75%;
			font-size: 3rem;
			animation-delay: 15s;
		}

		.animated-icons i:nth-child(7) {
			left: 90%;
			font-size: 2rem;
			animation-delay: 18s;
		}


		.freelancer-dashboard {
			max-width: 1200px;
			margin: 20px auto;
			padding: 10px;
		}

		.dashboard-grid {
			display: flex;
			gap: 20px;
		}

		/* Sol panel geniş və fleksibl olsun */
		.dashboard-left {
			flex: 1.5;
			display: flex;
			flex-direction: column;
			gap: 20px;
		}

		.job-card {
			background: white;
			padding: 20px;
			border-radius: 8px;
			box-shadow: 0 2px 8px rgb(0 0 0 / 0.1);
		}

			.job-card h2 {
				margin-top: 0;
				margin-bottom: 15px;
				font-weight: 700;
				font-size: 1.5rem;
				border-bottom: 2px solid #0077ff;
				padding-bottom: 8px;
				color: #0077ff;
			}

		/* Sağ panel */
		.dashboard-right {
			flex: 1;
			background: white;
			border-radius: 8px;
			padding: 20px;
			box-shadow: 0 2px 8px rgb(0 0 0 / 0.1);
			display: flex;
			flex-direction: column;
		}

			.dashboard-right h2 {
				margin-top: 0;
				margin-bottom: 15px;
				color: #0077ff;
				font-weight: 700;
				font-size: 1.5rem;
			}

		#map-placeholder {
			flex-grow: 1;
			min-height: 400px;
			border-radius: 8px;
			border: 1px solid #ccc;
		}

		/* Responsive üçün */
		@@media (max-width: 768px) {
			.dashboard-grid {
				flex-direction: column;
			}

			.dashboard-left,
			.dashboard-right {
				flex: none;
				width: 100%;
			}
		}

	</style>
	<!-- Bootstrap CSS -->
	<!-- Animate.css (CDN) -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body>

	<div id="preloader">
		<div class="spinner"></div>
	</div>
	<div id="main-content" style="opacity: 0;">
		<!-- Header / Navbar -->
		<header>
			<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
				<div class="container">
					<a class="navbar-brand" href="/">AzJobNest</a>
					<button class="navbar-toggler"
							type="button"
							data-bs-toggle="collapse"
							data-bs-target="#mainNavbar"
							aria-controls="mainNavbar"
							aria-expanded="false"
							aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="mainNavbar">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							@if (User.IsInRole(Role.Freelancer.ToString()))
							{
								<li class="nav-item">
									<a class="nav-link" href="/Projects">Projects</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="/Messages">Messages</a>
								</li>
							}
							else if (User.IsInRole(Role.Employer.ToString()))
							{
								<li class="nav-item">
									<a class="nav-link" href="/Freelancers">Freelancers</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="/Jobs/Post">Post a Job</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="/Messages">Messages</a>
								</li>
							}
							else if (User.IsInRole(Role.Admin.ToString()) || User.IsInRole(Role.SuperAdmin.ToString()))
							{
								<li class="nav-item">
									<a class="nav-link" href="/Projects">Projects</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="/Freelancers">Freelancers</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="/Jobs/Post">Post a Job</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="/Messages">Messages</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" asp-action="Index" asp-controller="Dashboard" asp-area="Admin">AdminDashboard</a>
								</li>
							}
						</ul>

						<!-- Logout düyməsi burada sağa itələnmiş şəkildə -->
						@if (User.Identity.IsAuthenticated)
						{
							<a class="btn btn-outline-info mx-3" asp-action="MyProfile" asp-controller="Account">Profile</a>
							<a class="btn btn-danger" asp-action="LogOut" asp-controller="Account">Logout</a>
						}
						else
						{
							<a class="btn btn-primary" asp-action="Login" asp-controller="Account">Login</a>
							<a class="btn btn-outline-primary mx-3" asp-action="Register" asp-controller="Account">Register</a>
						}
					</div>
				</div>
			</nav>
		</header>

		@RenderBody()
		<!-- Footer -->
		<footer class="bg-light text-dark mt-5 border-top shadow-sm">
			<div class="container py-4">
				<div class="row">
					<!-- About -->
					<div class="col-md-4 mb-3">
						<h5>AzJobNest</h5>
						<p class="small">
							AzJobNest is a professional platform for Freelancers and Employers in Azerbaijan. Post projects, find freelancers, and grow your business.
						</p>
					</div>

					<!-- Links -->
					<div class="col-md-4 mb-3">
						<h6>Links</h6>
						<ul class="list-unstyled small">
							<li><a href="/About" class="text-dark text-decoration-none">About</a></li>
							<li><a href="/Contact" class="text-dark text-decoration-none">Contact</a></li>
							<li><a href="/Support" class="text-dark text-decoration-none">Support</a></li>
							<li><a href="/Terms" class="text-dark text-decoration-none">Terms of Use</a></li>
						</ul>
					</div>

					<!-- Contact -->
					<div class="col-md-4 mb-3">
						<h6>Contact</h6>
						<p class="small mb-1"><i class="bi bi-envelope"></i> support@azjobnest.az</p>
						<p class="small mb-1"><i class="bi bi-envelope"></i> ilhamabbasov46@gmail.com</p>
						<p class="small mb-1"><i class="bi bi-telephone"></i> +994 55 888 33 49</p>
						<div>
							<a href="#" class="text-dark me-2"><i class="bi bi-facebook"></i></a>
							<a href="#" class="text-dark me-2"><i class="bi bi-instagram"></i></a>
							<a href="#" class="text-dark"><i class="bi bi-github"></i></a>
						</div>
					</div>
				</div>

				<div class="text-center pt-3 border-top mt-3 small">
					&copy; 2025 AzJobNest. All rights reserved.
				</div>
			</div>
		</footer>

		<!-- Bootstrap JS -->
		<!-- səhifənin sonunda, body bağlanmazdan əvvəl -->
		<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY&callback=myMap"></script>
		<script src="https://unpkg.com/@@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
		<script>
			const isAuthenticated = false; // bunu backend-dən gələn cookie/tokenlə təyin edə bilərsən

			const protectedRoutes = ["/Projects", "/Messages", "/Jobs/Post", "/Freelancers"];
			const currentPath = window.location.pathname;

			const pathMatch = protectedRoutes.some(route => currentPath.startsWith(route));

			if (!isAuthenticated && pathMatch) {
				window.location.href = "/Account/Login";
			}

			const icons = document.querySelectorAll('.animated-icons i');

			icons.forEach(icon => {
				const left = Math.floor(Math.random() * 91); // 0% - 90%
				const fontSize = (Math.random() * 1.5 + 1.5).toFixed(1); // 1.5rem - 3.0rem
				const delay = Math.floor(Math.random() * 20); // 0s - 19s

				icon.style.left = `${left}%`;
				icon.style.fontSize = `${fontSize}rem`;
				icon.style.animationDelay = `${delay}s`;
			});
						window.addEventListener('load', () => {
			  const preloader = document.getElementById('preloader');
			  const mainContent = document.getElementById('main-content');
			  if(preloader) preloader.style.display = 'none';
			  if(mainContent) {
				mainContent.style.display = 'block';
				setTimeout(() => {
				  mainContent.style.opacity = '1';
				}, 100);
			  }
			});
						window.addEventListener('load', () => {
			  const mainContent = document.getElementById('main-content');
			  if(mainContent) {
				mainContent.style.display = 'block';
				setTimeout(() => {
				  mainContent.style.opacity = '1';
				}, 100);
			  }
			});

			window.addEventListener('load', () => {
			  const welcomePopup = document.getElementById('welcomePopup');
			  if (welcomePopup) {
				setTimeout(() => {
				  welcomePopup.classList.add('animate__fadeOut');
				  setTimeout(() => {
					welcomePopup.style.display = 'none';
				  }, 700); // opacity keçidi tamamlanandan sonra display none
				}, 3500); //
			  }
			});

						window.addEventListener("DOMContentLoaded", () => {
			  const mainContent = document.getElementById("main-content");
			  mainContent.style.display = "block";
			  setTimeout(() => {
				mainContent.style.opacity = 1;
			  }, 100); // transition vaxtı ilə uyğun
			});


		</script>

	</div>
</body>
</html>